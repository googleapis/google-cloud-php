{
    "extends": [
        "config:base"
    ],
    "pinVersions": false,
    "rebaseStalePrs": true,
    "packageRules": [
        {
            "packageNames": [
                "phpunit/phpunit"
            ],
            "allowedVersions": "< 5.0"
        },
        {
            "packageNames": [
                "squizlabs/php_codesniffer"
            ],
            "allowedVersions": "< 3.0"
        },
        {
            "packageNames": [
                "symfony/console"
            ],
            "allowedVersions": "< 4.0"
        },
        {
            "matchDatasources": ["pypi"],
            "matchUpdateTypes": ["minor", "patch"],
            "groupName": "python non-major dependencies",
            "automerge": true
        }
    ]
}
