<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
  <testsuites>
    <testsuite name="System Test Suite">
      <directory>tests/System</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist>
      <directory suffix=".php">src</directory>
      <exclude>
        <directory suffix=".php">src/V[!a-zA-Z]*</directory>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
